function [x_drv_cut, t_acq_aligned] = alignTimeVectorEnds(t_drv, x_drv ,  t_acq)
    % % Ensure column vectors
    % t_drv = t_drv(:);
    % t_acq = t_acq(:);

    % Signal durations
    T1 = t_drv(end);
    T2 = t_acq(end);

    if T1 > T2
        % t_acq is shorter → shift it forward
        shift = T1 - T2;
       t_acq_aligned = t_acq + shift;
        t1_adj = t_drv;
    else
        % Same duration → no change
        t1_adj = t_drv;
       t_acq_aligned = t_acq;
    end
end
